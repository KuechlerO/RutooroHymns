<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Font Styles -->
    <style name="FontStyle">
    </style>

    <style name="FontStyle.Small">
        <item name="font_small">@dimen/font_size_small_small</item>
        <item name="font_medium">@dimen/font_size_small_medium</item>
        <item name="font_large">@dimen/font_size_small_large</item>
        <item name="font_xlarge">@dimen/font_size_small_xlarge</item>
    </style>

    <style name="FontStyle.Medium">
        <item name="font_small">@dimen/font_size_medium_small</item>
        <item name="font_medium">@dimen/font_size_medium_medium</item>
        <item name="font_large">@dimen/font_size_medium_large</item>
        <item name="font_xlarge">@dimen/font_size_medium_xlarge</item>
    </style>

    <style name="FontStyle.Large">
        <item name="font_small">@dimen/font_size_large_small</item>
        <item name="font_medium">@dimen/font_size_large_medium</item>
        <item name="font_large">@dimen/font_size_large_large</item>
        <item name="font_xlarge">@dimen/font_size_large_xlarge</item>
    </style>

    <style name="FontStyle.XLarge">
        <item name="font_small">@dimen/font_size_xlarge_small</item>
        <item name="font_medium">@dimen/font_size_xlarge_medium</item>
        <item name="font_large">@dimen/font_size_xlarge_large</item>
        <item name="font_xlarge">@dimen/font_size_xlarge_xlarge</item>
    </style>

</resources>
